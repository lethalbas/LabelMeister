<UserControl x:Class="LabelMeister.Views.RasterizeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Margin="16" Background="{StaticResource DarkBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Rasterize Grid" 
                   FontSize="24"
                   FontWeight="SemiBold"
                   Margin="0,0,0,16"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,16" IsEnabled="{Binding IsEnabled}">
                <TextBlock Text="Rows:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <Slider Value="{Binding Rows}" Minimum="1" Maximum="20" Width="200" Margin="0,0,16,0" IsEnabled="{Binding IsEnabled}"/>
                <TextBlock Text="{Binding Rows}" VerticalAlignment="Center" Margin="0,0,16,0"/>

                <TextBlock Text="Columns:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <Slider Value="{Binding Columns}" Minimum="1" Maximum="20" Width="200" Margin="0,0,16,0" IsEnabled="{Binding IsEnabled}"/>
                <TextBlock Text="{Binding Columns}" VerticalAlignment="Center" Margin="0,0,16,0"/>

                <Button Content="Create Grid"
                        Command="{Binding CreateGridCommand}"
                        IsEnabled="{Binding IsEnabled}"/>

                <Button Content="Reset"
                        Command="{Binding ResetGridCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Margin="8,0,0,0"
                        IsEnabled="{Binding IsEnabled}"/>
            </StackPanel>
            <CheckBox Content="Mark as completed" 
                      IsChecked="{Binding IsCompleted, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      IsEnabled="{Binding IsEnabled}"/>
        </StackPanel>

        <Border Grid.Row="2" 
                Padding="16"
                Background="{StaticResource DarkSurfaceElevated}"
                BorderBrush="{StaticResource DarkBorder}"
                BorderThickness="1"
                CornerRadius="4"
                x:Name="PreviewBorder">
            <Grid>
                <Image Source="{Binding PreviewImage}"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       MaxWidth="800"
                       MaxHeight="600"
                       x:Name="PreviewImageControl"/>
                <Canvas x:Name="GridCanvas"
                        Background="Transparent"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        MouseLeftButtonDown="GridCanvas_MouseLeftButtonDown"
                        MouseMove="GridCanvas_MouseMove"
                        MouseLeftButtonUp="GridCanvas_MouseLeftButtonUp"
                        MouseLeave="GridCanvas_MouseLeave">
                </Canvas>
            </Grid>
        </Border>
    </Grid>
</UserControl>

