<UserControl x:Class="LabelMeister.Views.PlacementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Margin="16" Background="{StaticResource DarkBackground}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="3"
                   Text="Placement" 
                   FontSize="24"
                   FontWeight="SemiBold"
                   Margin="0,0,0,16"/>

        <!-- Available Cutouts List -->
        <Border Grid.Row="1" Grid.Column="0"
                Margin="0,0,8,0"
                Padding="8"
                Background="{StaticResource DarkSurfaceElevated}"
                BorderBrush="{StaticResource DarkBorder}"
                BorderThickness="1"
                CornerRadius="4">
            <StackPanel>
                <TextBlock Text="Available Cutouts" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ListBox ItemsSource="{Binding Cutouts}"
                             SelectedItem="{Binding SelectedCutout, Mode=TwoWay}"
                             x:Name="CutoutsListBox"
                             PreviewMouseLeftButtonDown="CutoutsListBox_PreviewMouseLeftButtonDown"
                             IsEnabled="{Binding IsEnabled}"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="8" Margin="0,2" 
                                        Background="{StaticResource DarkBackground}"
                                        BorderBrush="{StaticResource DarkBorder}"
                                        BorderThickness="1"
                                        CornerRadius="2"
                                        Cursor="Hand">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Image Source="{Binding ImageData, Converter={StaticResource ByteArrayToImageConverter}}"
                                               Width="60"
                                               Height="60"
                                               Stretch="Uniform"
                                               Margin="0,0,8,0"
                                               Grid.Column="0"/>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Id, StringFormat='Cutout #{0}'}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Width, StringFormat='Width: {0:F1}mm'}" FontSize="11" Foreground="{StaticResource DarkTextSecondary}"/>
                                            <TextBlock Text="{Binding Height, StringFormat='Height: {0:F1}mm'}" FontSize="11" Foreground="{StaticResource DarkTextSecondary}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </StackPanel>
        </Border>

        <!-- Strip Preview with Interactive Canvas -->
        <Border Grid.Row="1" Grid.Column="1"
                Padding="16"
                Background="{StaticResource DarkSurfaceElevated}"
                BorderBrush="{StaticResource DarkBorder}"
                BorderThickness="1"
                CornerRadius="4"
                x:Name="PreviewBorder">
            <Grid>
                <Image Source="{Binding PreviewImage}"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       MaxWidth="800"
                       MaxHeight="600"
                       x:Name="PreviewImageControl"/>
                <Canvas x:Name="PlacementCanvas"
                        Background="Transparent"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        AllowDrop="True"
                        DragOver="PlacementCanvas_DragOver"
                        Drop="PlacementCanvas_Drop"
                        MouseLeftButtonDown="PlacementCanvas_MouseLeftButtonDown"
                        MouseMove="PlacementCanvas_MouseMove"
                        MouseLeftButtonUp="PlacementCanvas_MouseLeftButtonUp">
                </Canvas>
            </Grid>
        </Border>

        <!-- Placement Controls -->
        <Border Grid.Row="1" Grid.Column="2"
                Margin="8,0,0,0"
                Padding="8"
                Background="{StaticResource DarkSurfaceElevated}"
                BorderBrush="{StaticResource DarkBorder}"
                BorderThickness="1"
                CornerRadius="4"
                IsEnabled="{Binding IsEnabled}">
            <StackPanel>
                <TextBlock Text="Placement Controls" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,16"/>
                
                <TextBlock Text="Selected Placement:" Margin="0,0,0,8"/>
                <TextBlock Text="{Binding SelectedPlacement.CutoutId, StringFormat='Cutout #{0}', TargetNullValue='None'}" 
                           FontWeight="SemiBold"
                           Margin="0,0,0,16"/>
                
                <TextBlock Text="Location (mm):" Margin="0,16,0,8"/>
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="X:" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Text="{Binding SelectedPlacement.X, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" 
                             Grid.Column="1" Margin="0,0,8,0" IsEnabled="{Binding HasSelectedPlacement}"
                             LostFocus="XTextBox_LostFocus"/>
                    <TextBlock Text="Y:" Grid.Column="2" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Text="{Binding SelectedPlacement.Y, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" 
                             Grid.Column="3" IsEnabled="{Binding HasSelectedPlacement}"
                             LostFocus="YTextBox_LostFocus"/>
                </Grid>
                
                <TextBlock Text="Size (scale):" Margin="0,16,0,8"/>
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="X:" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Grid.Column="1" Margin="0,0,8,0"
                             IsEnabled="{Binding HasSelectedPlacement}"
                             LostFocus="ScaleXTextBox_LostFocus">
                        <TextBox.Text>
                            <Binding Path="SelectedPlacement.ScaleX" Mode="TwoWay" UpdateSourceTrigger="LostFocus" FallbackValue="1.0">
                                <Binding.StringFormat>{0:F2}</Binding.StringFormat>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <TextBlock Text="Y:" Grid.Column="2" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Grid.Column="3"
                             IsEnabled="{Binding HasSelectedPlacement}"
                             LostFocus="ScaleYTextBox_LostFocus">
                        <TextBox.Text>
                            <Binding Path="SelectedPlacement.ScaleY" Mode="TwoWay" UpdateSourceTrigger="LostFocus" FallbackValue="1.0">
                                <Binding.StringFormat>{0:F2}</Binding.StringFormat>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                </Grid>
                
                <TextBlock Text="Rotation:" Margin="0,16,0,8"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Button Content="Rotate 90°"
                            Command="{Binding RotatePlacementCommand}"
                            CommandParameter="{Binding SelectedPlacement}"
                            Margin="0,0,8,0"
                            IsEnabled="{Binding HasSelectedPlacement}"/>
                    <TextBlock VerticalAlignment="Center" FontWeight="SemiBold">
                        <TextBlock.Text>
                            <Binding Path="SelectedPlacement.Rotation" FallbackValue="--">
                                <Binding.StringFormat>
                                    {0}°
                                </Binding.StringFormat>
                            </Binding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>
                
                <Button Content="Remove Placement"
                        Command="{Binding RemovePlacementCommand}"
                        CommandParameter="{Binding SelectedPlacement}"
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,16,0,0"
                        IsEnabled="{Binding HasSelectedPlacement}"/>
            </StackPanel>
        </Border>

        <!-- Completion Checkbox -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Orientation="Vertical" Margin="0,16,0,0">
            <CheckBox Content="Mark as completed" 
                      IsChecked="{Binding IsCompleted, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      IsEnabled="{Binding IsEnabled}"/>
        </StackPanel>
    </Grid>
</UserControl>

