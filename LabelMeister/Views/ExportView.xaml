<UserControl x:Class="LabelMeister.Views.ExportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Margin="16" Background="{StaticResource DarkBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Export" 
                   FontSize="24"
                   FontWeight="SemiBold"
                   Margin="0,0,0,16"/>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,16" IsEnabled="{Binding IsEnabled}">
                <TextBlock Text="File Name:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox Text="{Binding FileName}" Width="200" Margin="0,0,16,0" IsEnabled="{Binding IsEnabled}"/>
                <Button Content="Generate Preview"
                        Command="{Binding GeneratePreviewCommand}"
                        Style="{StaticResource SecondaryButton}"
                        Margin="0,0,16,0"
                        IsEnabled="{Binding IsEnabled}"/>
                <Button Content="Export PDF"
                        Command="{Binding ExportCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
                            <Setter Property="IsEnabled" Value="{Binding IsEnabled}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsExporting}" Value="True">
                                    <Setter Property="IsEnabled" Value="False"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="2" 
                Padding="16" 
                Margin="0,0,0,16"
                Background="{StaticResource DarkSurfaceElevated}"
                BorderBrush="{StaticResource DarkBorder}"
                BorderThickness="1"
                CornerRadius="4">
            <Image Source="{Binding PreviewImage}"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   MaxWidth="800"
                   MaxHeight="600"/>
        </Border>

        <TextBlock Grid.Row="3"
                   Text="{Binding StatusMessage}"
                   FontSize="14"/>
    </Grid>
</UserControl>

